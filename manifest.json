{
  "name": "Dragosien Analyzer",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Reads information from dragosien.de while playing and aggregates it.",
  
  "page_action": {
    "default_icon": "icon.png",
    "default_title": "Dragosien Analyzer",
    "default_popup": "popup.xhtml"
  },
  
  "background": {
    "scripts": ["dataStore.js"],
    "persistent": false
  },
  
  "content_scripts": [
    {
      "matches": ["http://www.dragosien.de/*"],
      "js": ["common.js","readData.js"]
    }
  ]
}