{
  "name": "Dragosien Analyzer",
  "version": "0.2",
  "manifest_version": 2,

  "description": "Liest Informationen von dragosien.de w√§rend man spielt und stellt aggregierte Anichten bereit.",
  "icons": { "16": "icon16.png",
             "32": "icon32.png",
             "48": "icon48.png",
             "128": "icon128.png" },

  "background": {
    "scripts": ["dataStore.js"],
    "persistent": false
  },

  "page_action": {
    "default_icon": {              
      "19": "icon19.png",
      "38": "icon38.png"
    },
    "default_title": "Dragosien Analyzer",
    "default_popup": "popup.xhtml"
  },

  "content_scripts": [
    {
      "matches": ["http://www.dragosien.de/*"],
      "js": ["common.js","readData.js", "enhanceMatch.js"]
    }
  ]
}